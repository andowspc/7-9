<h1>Editing book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %> errors
  <% end %>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), local:true do |f| %>
  
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit "Update Book" %>
  
  <p><%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %></p>

<% end %>